prototype(P:Lightbox) < prototype(Fusion:Tag) {
  @if.isEnabled = ${node.context.live && q(node).property('lightbox') && lightbox ? true : false}
  tagName = 'a'
  content = ${value}
  attributes {
    target = ${Configuration.setting('Jonnitto.Picture.lightbox.target')}
    class = ${Configuration.setting('Jonnitto.Picture.lightbox.class')}
    data-size = ${lightbox.width + 'x' + lightbox.height}
    data-title = ${caption}
    href = ImageUri {
      asset = ${lightbox}
    }
  }
}
